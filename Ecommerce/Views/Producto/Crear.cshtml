@model Ecommerce.Models.Producto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<html>

    <head>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <LINK REL=StyleSheet HREF="~/css/Producto.css" TYPE="text/css" MEDIA=screen>
    </head>

    <body>
    <div class="container">

        <h1>FORMULARIO DE REGISTRO</h1>
        <a asp-controller="Producto" asp-action="Index">Home</a>
       <a asp-controller="Producto" asp-action="Productos">Eliminar/Editar</a>
        <form asp-controller="Producto" asp-action="Crear" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="formGroupExampleInput">Id</label>
                <input type="text" asp-for="Id"  class="form-control" id="formGroupExampleInput" autocomplete="off" placeholder="Id" readonly>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Nombre del Producto</label>
                <input type="text" asp-for="Nombre" class="form-control" id="formGroupExampleInput2" autocomplete="off" placeholder="Producto" required>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Descripcion</label>
                <input type="text" asp-for="Descripcion" class="form-control" id="formGroupExampleInput2" autocomplete="off" placeholder="Descripcion" required>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Precio</label>
                <input type="number" asp-for="Precio" class="form-control" id="formGroupExampleInput2" autocomplete="off" placeholder="Precio" required>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Stock</label>
                <input type="number" asp-for="Stock" class="form-control" id="formGroupExampleInput2" autocomplete="off" placeholder="Cantidad" required>
            </div>
            <div class="form-group">
                <label for="CategoriaId"> Categoria</label>
                <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control" ></select>

            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ingrese Imagen del Producto (URL)</label>
                <input type="text" asp-for="ImagenUrl" id="text" required>
                
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" value="grabar" name="grabar"  data-toggle="modal" data-target="#exampleModal">Grabar</button>
            </div>
            <div class="form-group">
            </div>
           
        </form>
    </div>
    </body>
</html>